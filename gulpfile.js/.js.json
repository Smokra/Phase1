{
  "eslintConfig": {
    "configFile": "helpers.proot/.eslintrc.json",
    "fix": true,
    "quiet": true
  },
  "includeConfig": {
    "hardFail": true,
    "includePaths": [
      "helpers.proot/node_modules"
    ]
  },
  "standardConfig": {
    "breakOnError": false,
    "showRuleNames": true,
    "standard": {
      "globals": [
        "requestAnimationFrame",
        "sessionStorage"
      ]
    }
  },
  "renameConfig": {
    "suffix": ".min"
  }
}
